<h1>{{model.bandName}}</h1>
{{#if isEditing}}
  <label for="bandName">Band Name
    {{one-way-input value=model.bandName update=(action (mut model.bandName))}}
  </label>
  <button type="button" {{action "save"}}>save</button>
  <div>

    <a href="#" {{action "toggleEditMode"}}>exit edit mode</a>
  </div>
{{else}}
  <p>Band Name: {{model.bandName}}</p>
  <p>
    <a href="#" {{action "toggleEditMode"}}>edit</a>
  </p>
{{/if}}
<p>
  {{#if isAddingMembers}}
    <label for="firstName">First Name
      {{one-way-input value=firstName update=(action (mut firstName))}}
    </label>
    <label for="lastName">Last Name
      {{one-way-input value=lastName update=(action (mut lastName))}}
    </label>
  <button type="button" {{action "saveMember"}}>save</button>
    <p><a href="#" {{action "toggleAddMembersMode"}}>members managed</a></p>
  {{else}}

    <p><a href="#" {{action "toggleAddMembersMode"}}>manage members</a></p>
  {{/if}}
</p>
<ul>
  {{#each model.members as |member|}}
    <li>{{member.firstName}} {{member.lastName}} <a href="#" {{action "deleteMember" member.id}}>delete</a></li>
  {{/each}}
</ul>