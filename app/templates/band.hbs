<h1>{{model.bandName}}</h1>
{{#if isEditing}}
  <label for="bandName">Band Name
    {{one-way-input value=model.bandName update=(action (mut model.bandName))}}
  </label>
  <button type="button" {{action "save"}}>save</button>
  <div>

    <a href="#" {{action "toggleEditMode"}}>exit edit mode</a>
  </div>
{{else}}
  <p>Band Name: {{model.bandName}}</p>
  <p>
    <a href="#" {{action "toggleEditMode"}}>edit</a>
  </p>
{{/if}}
<p>
  {{#if isAddingMembers}}
    <a href="#" {{action "toggleAddMembersMode"}}>done adding members</a>
  {{else}}
    <a href="#" {{action "toggleAddMembersMode"}}>add members</a>
  {{/if}}
</p>