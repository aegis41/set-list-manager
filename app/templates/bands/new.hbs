<h1>New Band</h1>
<p>{{#link-to "bands"}}Bands{{/link-to}}</p>
<label for="bandName">Band Name
	{{one-way-input value=bandName update=(action (mut bandName))}}
</label>

<button type=button {{action "createBand"}}>I am a button</button>
<h2>Existing Bands</h2>
{{#each model as |band|}}
<p>{{band.bandName}}</p>
{{/each}}